{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "baseUrl": "./src",
        "paths":{
        "@utils/*": ["utils/*"],
        "@controllers/*": ["controllers/*"],
        "@services/*" : ["services/*"],
        "@schema/*" : ["schema/*"],
        "@routes/*": ["routes/*"],
        "@src/*": ["./*"],
        "@core/*": ["../*"]
        },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}